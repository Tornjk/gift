<rx:ReactiveUserControl x:Class="Gift.Wpf.View.MessageView"
                        x:TypeArguments="vm:MessageViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:rx="http://reactiveui.net"
             xmlns:vm="clr-namespace:Gift.ViewModel;assembly=Gift.ViewModel"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gift.Wpf.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock x:Name="FromTextBlock"/>
        <TextBlock x:Name="MessageTextBlock"/>
    </StackPanel>
</rx:ReactiveUserControl>
